@model IEnumerable<PatientData>
@{
    ViewData["Title"] = "PatientList";
}

<html>
<head>
    <style>
        .searchInputBox {
            height: 15px;
            font-size: 15px;
        }

        .mainTable {
            /*border: 1px solid;*/
        }

            .mainTable td {
                width: 50%;
                height: 50%;
                border: 1px solid;
            }

        .patientListTable td {
            font-size: 12px;
            width: 11%;
            height: 25px;
            border: 1px solid black;
            color: white;
            padding-left:5px;
        }

        .patientListTable th {
            background-color: rgb(214, 224, 236);
            font-size: 12px;
            border: 1px solid;
            width: 14%;
        }

        .searchHeaderDiv {
            background-color: grey;
        }

        .rowStyle {
            float: left;
        }

        .row {
            margin: 0 0 0 0;
        }

        .buttons {
            width: 80px;
            height: 45px;
            background-color: gray;
            font: bold;
            border: none;
            margin-left: 20px;
        }

        .buttons:hover {
            background-color: rgb(114, 114, 114);
        }

        .localDriveTextBox {
            margin-left: 30px;
            height:22px !important;
        }

        input[type=text] {
            width: 220px;
            height: 25px;
        }

        .visibilityCheckbox {
            margin-left: 20px;
            margin-top: 10px
        }

        .resetButton {
            margin-left: 35px;
            background-color: transparent;
            border: none;
        }

        .resetButton:hover {
            background-color: rgb(114, 114, 114);
        }

        .whiteLabel {
            color: white;
            margin-left: 15px;
        }
    </style>
</head>
<body>
    <div style="height: 100vh;">
        <div class="row">
            <div style="border: 1px solid; background-color: grey; width: 70%; height: 50%;">
                <div class="searchHeaderDiv">
                    <input type="text" class="searchInputBox" placeholder="search" />
                </div>
                <table class="patientListTable">
                    <tr>
                        <th>Status</th>
                        <th>Patient id</th>
                        <th>Patient name</th>
                        <th>Study Time</th>
                        <th>Study Id</th>
                        <th>Modality</th>
                        <th># of Images</th>
                        <th>Description</th>
                    </tr>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>P</td>
                            <td>@Html.DisplayFor(modelItem => item.PatientId)</td>
                            <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                            <td>@Html.DisplayFor(modelItem => item.StudyTime)</td>
                            <td>@Html.DisplayFor(modelItem => item.StudyId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Modality)</td>
                            <td>@Html.DisplayFor(modelItem => item.ImageCount)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        </tr>
                    }
                </table>
            </div>
            <div style="border: 1px solid; background-color: grey; height: 50%; width: 30%;">
                <span class="whiteLabel">1. Select Local Target Drive / Remote DICOM Node</span><br />
                <input type="text" class="localDriveTextBox" value="Local Drive"/><br />
                <input type="checkbox" style="margin-left: 20px; margin-top: 50px" /><span>Enable Remote Nodes</span><br />
                <span class="whiteLabel">2. Set Study List Filter</span><br />
                <input type="button" value="Reset" class="resetButton"/><br />
                <input type="checkbox" style="margin-left: 20px; margin-top: 50px" />
                <select style="height: 25px;">
                    <option>Patient ID</option>
                    <option>Paitent Name</option>
                    <option>Study ID</option>
                    <option>Accession Number</option>
                    <option>Description</option>
                    <option>Patient Other ID</option>
                    <option>Institution Name</option>
                    <option>Flag: Review Status</option>
                    <option>Flag: Status</option>
                </select>
                <input type="text" style="width: 220px; height: 25px;" /><br />

                <input type="checkbox" class="visibilityCheckbox" />
                <select style="height: 25px;">
                    <option>Patient ID</option>
                    <option>Paitent Name</option>
                    <option>Study ID</option>
                    <option>Accession Number</option>
                    <option>Description</option>
                    <option>Patient Other ID</option>
                    <option>Institution Name</option>
                    <option>Flag: Review Status</option>
